<div class="comments">
  <% @post.comments.each do |comment| %>
    <div class="comment-detail">
      <%= comment.comment %><br>
      <%= comment.user.name %>
      <%= comment.created_at.strftime('%Y/%m/%d') %>
      <% if comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to "削除", post_comment_path(comment.post_id, comment.id), class: 'btn-sm btn-danger', method: :delete,remote: true %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>