  <%= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= render 'layouts/header' %>
  <div class="col-md-3">
    <h2 class="mt-3">投稿一覧</h2>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3 mt-5">
          <div class="image">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, format: 'jpeg', fallback: "no_image.jpg", size:'240x160', class: "image" %>
            <% end %>
          </div>
          <div class="mt-3">
            <%= post.title %>
          </div>
          <div class="mt-3">
            <%= post.user.name %>
          </div>
          <div class="mt-3">
            ♥<%= post.favorites.count %> いいね
          </div>
      </div>
    <% end %>
  </div>