  <%= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'jquery.raty', 'data-turbolinks-track': 'reload' %>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/jquery.raty.js"></script>
  <%= render 'layouts/header' %>
  <h2 class="mt-3">投稿一覧</h2>
  <!--<h4>全<%#= @posts.total_count %>件</h4>-->
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3 mt-5">
          <div class="image">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image2.jpg", size:'240x160', class: "image" %>
            <% end %>
          </div>
          <div class="mt-3">
            <%= post.title %>
          </div>
          <div class="mt-3">
            <%= post.user_name %>
          </div>
          <div class="mt-3">
              ♥<%= @post.favorites.count %> いいね
          </div>
      </div>
    <% end %>
  </div>