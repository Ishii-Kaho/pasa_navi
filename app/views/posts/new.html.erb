  <%= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'jquery.raty', 'data-turbolinks-track': 'reload' %>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/jquery.raty.js"></script>
  <%= render 'layouts/header' %>
  <h2 class="mt-3">新規投稿</h2>

  <div class="new-post">
    <%= form_with model:@post, url:'/posts/new', local:true do |f| %>
      <div class="select-box">
        <h6 class="post-prefecture">都道府県名</h6>
        <%= f.text_field :prefecture %>
      </div>

      <div class="form-group">
        <h6 class="post-highway_name">高速道路名</h6>
        <%= f.text_field :highway_name %>
      </div>

      <div class="form-group">
        <h6 class="post-facility">PA/SA名</h6>
        <%= f.text_field :facility %>
      </div>

      <div class="form-group">
        <h6 class="book-title">ジャンル</h6>
        <%= f.text_field :title %>
      </div>
      <div class="raty">
        <div class="form-group" id="cleanliness-star">
          <%= f.label :cleanliness,'清潔度 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :cleanliness, id: :review_star %>
        </div>

        <script>
        $('#cleanliness-star').raty({
          size     : 50,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          scoreName: 'post[cleanliness]',
        });
        </script>

        <div class="form-group" id="congestion-star">
          <%= f.label :congestion,'混雑度 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :congestion, id: :review_star %>
        </div>

        <script>
        $('#congestion-star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          scoreName: 'post[congestion]',
        });
        </script>

        <div class="form-group" id="satisfaction-star">
          <%= f.label :satisfaction,'満足度 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :satisfaction, id: :review_star %>
        </div>

        <script>
        $('#satisfaction-star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          scoreName: 'post[satisfaction]',
        });
        </script>

      </div>

      <div class="form-group">
        <label for ="post-image"></label>
        <%= f.attachment_field :image, placeholder: "投稿画像" %>
      </div>

      <div class="form-group">
        <h6 class="post-opinion">投稿内容</h6>
        <%= f.text_area :opinion %>
      </div>
        <%= f.submit 'Create Book', class: "btn btn- btn btn-success" %>
    <% end %>

  </div>

  <%= render 'layouts/footer' %>