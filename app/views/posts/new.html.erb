  <%= stylesheet_link_tag 'posts', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= render 'layouts/header' %>
  <h2 class="mt-3">新規投稿</h2>

  <div class="new-post">
    <%= form_with model:@post, local:true do |f| %>
      <div class="post-prefecture">都道府県
        <%= form_for @post, method: :post do |f| %>
         <%= f.select :prefecture, Post.prefectures.keys, {} %>
        <% end %>
      </div>

      <%= form_for @post do |f| %>
        <%= f.label :pasa_id %>
        <%= f.collection_select :pasa_id, Pasa.all, :id, :facility, :prompt => true %>
      <% end %>

      <div class="post-genre">ジャンル
        <%= form_for @post, method: :post do |f| %>
         <%= f.select :genre, Post.genres.keys, {} %>
        <% end %>
      </div>

      <div class="raty">
        <div class="form-group" id="cleanliness-star">
          <%= f.label :cleanliness,'清潔度 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :cleanliness, id: :review_star %>
        </div>

        <script>
        $('#cleanliness-star').raty({
          size     : 50,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'post[cleanliness]',
          half: true,
        });
        </script>

        <div class="form-group" id="congestion-star">
          <%= f.label :congestion,'混雑度 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :congestion, id: :review_star %>
        </div>

        <script>
        $('#congestion-star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'post[congestion]',
          half: true,
        });
        </script>

        <div class="form-group" id="satisfaction-star">
          <%= f.label :satisfaction,'満足度 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :satisfaction, id: :review_star %>
        </div>

        <script>
        $('#satisfaction-star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'post[satisfaction]',
          half: true,
        });
        </script>

      </div>

      <div class="form-group">
        <label for ="post-image"></label>
        <%= f.attachment_field :image, placeholder: "投稿画像" %>
      </div>

      <div class="form-group">
        <h6 class="post-title">タイトル</h6>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <h6 class="post-opinion">投稿内容</h6>
        <%= f.text_area :opinion %>
      </div>

      <div class="visit">来訪日
        <div class="form-group">
          <h6 class="visit_time"></h6>
          <%= f.date_field :visit_time %>
        </div>

        <div class="form-group">
           <%= f.select :visit_weekday, {'平日': '平日', '休日': '休日', '祝日': '祝日'}, { include_blank: '選択してください'}, { required: true } %>
        </div>
      </div>

        <%= f.submit '投稿', class: "btn btn- btn btn-success" %>
    <% end %>

  </div>

  <%= render 'layouts/footer' %>