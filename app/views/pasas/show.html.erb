<%= stylesheet_link_tag 'pasas', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= render 'layouts/header' %>
<h2 class="mt-3"><%= @pasa.facility %></h2>
<div class="raty">
  <div class="raty-cleanliness">PA/SA清潔度</div>
  <div class="raty-congestion">PA/SA混雑度</div>
  <div class="raty-satisfaction">PA/SA満足度</div>
</div>

<div class="post"></div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-3 mt-5">
          <div class="image">
            <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :image, format: 'jpeg', fallback: "no_image.jpg", size:'240x160', class: "image" %>
            <% end %>
          </div>
          <div class="profile_image">
            <%= attachment_image_tag post, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:'240x160', class: "image" %>
          </div>
          <div class="user_name">
            <%= post.user_name %>
          </div>
          <div class="favorites">
              ♥<%= @post.favorites.count %> いいね
          </div>
          <div class="created_at">
              <%= @post.created_at %>
          </div>
      </div>
