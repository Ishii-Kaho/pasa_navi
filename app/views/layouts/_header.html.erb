            <li><i class="fas fa-user-alt"></i><%= link_to "マイページ", user_path(current_user.id) %></li>
            <li><i class="fas fa-sign-out-alt"></i><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          </ul>


        <% else %>
          <ul>
            <li><i class="fas fa-list-alt"></i><%= link_to "投稿一覧", posts_path %></li>
