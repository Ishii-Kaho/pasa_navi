<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= render 'layouts/header' %>

  <h2>マイページ</h2>

  <div class="col-md-3">


    <div class="profile-container">
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>

      <div class="user-info">
        <div class="user-name">
          <p>氏名</p>
          <h3><%= @user.name %></h3>
        </div>
        <div class="user-nickname">
          <p>ニックネーム（表示名)</p>
          <h3><%= @user.nickname %></h3>
        </div>
        <div class="user-email">
          <p>メールアドレス</p>
          <h3><%= @user.email %></h3>
        </div>
      </div>
      <div class="user-edit-btn">
        <%= link_to edit_user_path(@user.id), class: 'btn btn-block btn btn-outline-secondary' do %><i class="fas fa-user-cog" aria-hidden="true"></i><% end %>
      </div>
    </div>
