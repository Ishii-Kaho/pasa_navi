<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= render 'layouts/header' %>

  <h2>マイページ</h2>

  <div class="col-md-3">

  
    <div class="profile-container">
      <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>

      <table class="table table-striped">
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
            <tr>
            <th>follows</th>
            <th><%= link_to user.following_user.count, followings_user_path(user.id) %></th>
          </tr>
            <tr>
            <th>followers</th>
            <th><%= link_to user.follower_user.count, followers_user_path(user.id) %></th>
          </tr>
      </table>
      <div class="user-edit-btn">
        <!--% if current_user.id == user.id %-->
        <%= link_to edit_user_path(user.id), class: 'btn btn-block btn btn-outline-secondary' do %><i class="fas fa-user-cog" aria-hidden="true"></i><% end %>
        <!--% else %-->
        <!--%= link_to user_path(current_user.id), class: 'btn btn-block btn btn-outline-secondary' do %><i class="fa fa-user-cog" aria-hidden="true"></i><%# end %>-->
        <!--% end %>-->
      </div>
    </div>


    <h2 class="mt-3">New book</h2>
    <%= form_with model:book, url:'/books', local:true do |f| %>
      <div class="form-group">
        <h6 class="book-title">Title</h6>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <h6 class="book-opinion">Opinion</h6>
        <%= f.text_area :body %>
      </div>
        <%= f.submit 'Create Book', class: "btn btn- btn btn-success" %>
    <% end %>

  </div>