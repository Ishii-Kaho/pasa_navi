    </div>
    <div class="toilet">
      <div class="genre-text"><i class="fas fa-toilet"></i><%= link_to "トイレ", toilet_path %></div>
      <div class="toilet-image"></div>
    </div>
    <div class="smoking">
      <div class="genre-text"><i class="fas fa-smoking"></i><%= link_to "喫煙所", smoking_path %></div>
      <div class="smoking-image"></div>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>